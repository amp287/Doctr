<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.group.poop.doctr.ProfilePage">

    <TextView
        android:id="@+id/profilePageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Page"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/profileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profilePageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/profilePictureImageButton"
                android:layout_width="112dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:text = "profilePictureImage"/>

            <TextView
                android:id="@+id/profileSummaryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.61"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Profile Summary" />

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.61"
                android:text="Name: " />

            <TextView
                android:id="@+id/dateOfBirthTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.61"
                android:text="DOB: " />

            <TextView
                android:id="@+id/emailAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.61"
                android:text="Email: " />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.61"
                android:text="Address: " />

            <LinearLayout
                android:id="@+id/navigationBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/settingsImageButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:onClick="onClickSettingsButton"
                    app:srcCompat="@drawable/settingsimage" />

                <ImageButton
                    android:id="@+id/emailImageButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:onClick="onClickEmailButton"
                    app:srcCompat="@drawable/emailbutton" />

                <ImageButton
                    android:id="@+id/calendarImageButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:onClick="onClickCalendarButton"
                    app:srcCompat="@drawable/calendarimage" />

                <ImageButton
                    android:id="@+id/searchImageButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:onClick="onClickSearchButton"
                    app:srcCompat="@drawable/search" />
            </LinearLayout>
            <!--Remove Comments for more rows-->
            <LinearLayout
                android:id="@+id/navigationBar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/servicesImageButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:onClick="onClickAddServicesButton"
                    app:srcCompat="@drawable/services" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
