<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deleteProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete My Profile"
        android:onClick="onClickDeleteMyProfile"/>
        <!--TODO - Add Spacing-->
    <Button
        android:id="@+id/deletePrivilegeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove selected Privilege"
        android:onClick="onClickDeleteMyProfile"/>

    <ListView
        android:id="@+id/viewingPrivilegeListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--TODO - Still need to add a list of doctor's who have -->
    <!--TODO - Visibility to the profile and a way to remove visibility -->
</LinearLayout>